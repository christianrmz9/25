>\r\n</template>\r\n\r\n<script>\r\n/**\r\n * Componente para renderizar ítems de menú, soportando estructura jerárquica\r\n * \r\n * Características:\r\n * - Soporta elementos simples y elementos con hijos (expansibles)\r\n * - Gestiona el estado de expandido/colapsado\r\n * - Permite marcado como favorito\r\n * - Renderiza correctamente elementos de cabecera de sección\r\n * \r\n * @component MenuItem\r\n */\r\nimport { computed } from 'vue';\r\nimport { ICON_MAPPING } from '../../constants/icons';\r\nimport MaterialIcon from '../ui/Icon.vue';\r\n\r\nexport default {\r\n  name: 'MenuItem',\r\n  \r\n  components: {\r\n    icon: MaterialIcon\r\n  },\r\n  \r\n  props: {\r\n    /**\r\n     * Elemento a renderizar\r\n     */\r\n    item: {\r\n      type: Object,\r\n      required: true\r\n    },\r\n    \r\n    /**\r\n     * Nivel de profundidad para indentación\r\n     */\r\n    depth: {\r\n      type: Number,\r\n      default: 0\r\n    }\r\n  },\r\n  \r\n  emits: ['item-click'],\r\n  \r\n  setup(props, { emit }) {\r\n    // Verificar si el elemento tiene hijos\r\n    const hasChildren = computed(() => {\r\n      return props.item.children && props.item.children.length > 0;\r\n    });\r\n    \r\n    // Estado de expansión del elemento - extraído de props para evitar mutación directa\r\n    const isExpanded = computed(() => {\r\n      return props.item.expanded || false;\r\n    });\r\n    \r\n    // Verificar si el elemento está en favoritos\r\n    const isFavorite = computed(() => {\r\n      try {\r\n        const visitHistory = JSON.parse(localStorage.getItem('visitHistory') || '{}');\r\n        \r\n        // Crear identificador único del elemento\r\n        const itemPath = props.item.parent ? `${props.item.parent} > ${props.item.text}` : props.item.text;\r\n        const itemId = `${itemPath}-${props.item.href}`;\r\n        \r\n        // Un elemento es favorito si tiene 3 o más visitas\r\n        return (visitHistory[itemId] || 0) >= 3;\r\n      } catch (error) {\r\n        console.error('Error al verificar favorito:', error);\r\n        return false;\r\n      }\r\n    });\r\n    \r\n    // Convertir nombre de icono según el mapeo\r\n    const getIconName = (iconKey) => {\r\n      return ICON_MAPPING[iconKey] || iconKey;\r\n    };\r\n    \r\n    // Manejar clic en elemento\r\n    const handleClick = () => {\r\n      // Emitir el evento para registrar la visita en todos los casos\r\n      emit('item-click', props.item);\r\n      \r\n      // Si tiene hijos, expandir/colapsar\r\n      if (hasChildren.value) {\r\n        toggleExpanded();\r\n      }\r\n      // La navegación se manejará en el componente padre\r\n    };\r\n    \r\n    // Manejar clic en elemento hijo (pasar al padre)\r\n    const handleChildClick = (item) => {\r\n      // Verificar si ya tiene parent establecido\r\n      if (!item.parent && props.item.text) {\r\n        // Establecer la referencia al padre si no existe\r\n        const childWithParent = {\r\n          ...item,\r\n          parent: props.item.text\r\n        };\r\n        emit('item-click', childWithParent);\r\n      } else {\r\n        emit('item-click', item);\r\n      }\r\n    };\r\n    \r\n    // Cambiar estado de expandido/colapsado\r\n    const toggleExpanded = () => {\r\n      // Usar una copia para evitar modificar la prop directamente\r\n      const updatedExpanded = !isExpanded.value;\r\n      \r\n      // Guardar estado en localStorage\r\n      saveExpandedState(updatedExpanded);\r\n      \r\n      // Actualizar el estado usando el event bus o establecer en el componente padre\r\n      // Esta es una solución temporal, ya que no podemos modificar la prop directamente\r\n      if (props.item.id) {\r\n        try {\r\n          // Emitir un evento personalizado para que el padre pueda actualizar el estado\r\n          window.dispatchEvent(\r\n            new CustomEvent('menu-item-expanded', { \r\n              detail: { \r\n                id: props.item.id, \r\n                expanded: updatedExpanded \r\n              } \r\n            })\r\n          );\r\n        } catch (error) {\r\n          console.error('Error al emitir evento de expansión:', error);\r\n        }\r\n      }\r\n    };\r\n    \r\n    // Guardar estado de expandido en localStorage\r\n    const saveExpandedState = (expanded) => {\r\n      try {\r\n        // Obtener estado actual\r\n        const expandedState = JSON.parse(localStorage.getItem('menuExpandedState') || '{}');\r\n        \r\n        // Actualizar con el nuevo estado\r\n        if (props.item.id) {\r\n          expandedState[props.item.id] = expanded;\r\n        }\r\n        \r\n        // Guardar en localStorage\r\n        localStorage.setItem('menuExpandedState', JSON.stringify(expandedState));\r\n      } catch (error) {\r\n        console.error('Error al guardar estado expandido:', error);\r\n      }\r\n    };\r\n    \r\n    return {\r\n      hasChildren,\r\n      isExpanded,\r\n      isFavorite,\r\n      getIconName,\r\n      handleClick,\r\n      handleChildClick,\r\n      toggleExpanded\r\n    };\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.menu-item-wrapper {\r\n  position: relative;\r\n}\r\n\r\n.menu-item {\r\n  position: relative;\r\n}\r\n\r\n.nav-link {\r\n  display: flex;\r\n  align-items: center;\r\n  padding: 0.6rem 1rem;\r\n  color: var(--text-primary);\r\n  text-decoration: none;\r\n  transition: all 0.2s ease;\r\n  position: relative;\r\n  border-radius: var(--border-radius-sm);\r\n  margin: 0.125rem 0.5rem;\r\n}\r\n\r\n.nav-link:hover {\r\n  background-color: var(--bg-hover);\r\n}\r\n\r\n.nav-link.active {\r\n  background-color: var(--bg-active);\r\n  color: var(--primary);\r\n  font-weight: 500;\r\n}\r\n\r\n/* Estilos para tema oscuro */\r\n@media (prefers-color-scheme: dark) {\r\n  .nav-link {\r\n    margin: 0.125rem 0.75rem;\r\n    border-radius: 4px;\r\n  }\r\n  \r\n  .nav-link:hover {\r\n    background-color: #3D3D3D !important;\r\n    border-left: 3px solid #555555;\r\n    padding-left: calc(1rem - 3px);\r\n    color: #E0E0E0 !important;\r\n  }\r\n  \r\n  .children-wrapper .nav-link:hover {\r\n    background-color: #3D3D3D !important;\r\n    border-left: 3px solid #555555;\r\n    padding-left: calc(1rem - 3px);\r\n    color: #E0E0E0 !important;\r\n  }\r\n  \r\n  .section-title {\r\n    color: rgba(255, 255, 255, 0.6);\r\n    letter-spacing: 1px;\r\n  }\r\n  \r\n  .children-wrapper .children-wrapper {\r\n    border-left-color: rgba(255, 255, 255, 0.1);\r\n  }\r\n  \r\n  /* Asegurar que todos los textos sean visibles al hacer hover */\r\n  .nav-link:hover .nav-text {\r\n    color: #E0E0E0 !important;\r\n  }\r\n  \r\n  .nav-link.active {\r\n    background-color: #555555 !important;\r\n    border-left: 3px solid #777777;\r\n    padding-left: calc(1rem - 3px);\r\n    color: #FFFFFF !important;\r\n  }\r\n}\r\n\r\n.nav-icon {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  margin-right: 0.75rem;\r\n  width: 1.5rem;\r\n  height: 1.5rem;\r\n  color: var(--icon-color);\r\n  transition: all 0.2s ease;\r\n}\r\n\r\n.active .nav-icon {\r\n  color: var(--primary);\r\n}\r\n\r\n.nav-text {\r\n  flex: 1;\r\n  white-space: nowrap;\r\n  overflow: hidden;\r\n  text-overflow: ellipsis;\r\n}\r\n\r\n.nav-badge {\r\n  background-color: var(--badge-bg);\r\n  color: var(--badge-text);\r\n  padding: 0.15rem 0.5rem;\r\n  border-radius: 10px;\r\n  font-size: 0.7rem;\r\n  font-weight: 500;\r\n  margin-left: 0.5rem;\r\n}\r\n\r\n/* Estilos para elementos con hijos */\r\n.with-children > .menu-item > .nav-link {\r\n  font-weight: 500;\r\n}\r\n\r\n.expand-arrow {\r\n  transition: transform 0.3s ease;\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\n.expand-arrow.expanded {\r\n  transform: rotate(-180deg);\r\n}\r\n\r\n/* Indentación de subelementos */\r\n.children-wrapper {\r\n  padding-left: 0.5rem;\r\n  overflow: hidden;\r\n}\r\n\r\n/* Hijos de segundo nivel o más */\r\n.children-wrapper .children-wrapper {\r\n  border-left: 1px solid var(--border);\r\n  margin-left: 0.75rem;\r\n}\r\n\r\n/* Animación para mostrar/ocultar hijos */\r\n.slide-children-enter-active,\r\n.slide-children-leave-active {\r\n  transition: all 0.3s ease-out;\r\n  max-height: 1000px;\r\n  opacity: 1;\r\n  overflow: hidden;\r\n}\r\n\r\n.slide-children-enter-from,\r\n.slide-children-leave-to {\r\n  max-height: 0;\r\n  opacity: 0;\r\n  overflow: hidden;\r\n}\r\n\r\n/* Estilos para cabeceras de sección */\r\n.section-title {\r\n  font-size: 0.75rem;\r\n  font-weight: 600;\r\n  color: var(--text-muted);\r\n  text-transform: uppercase;\r\n  letter-spacing: 0.05em;\r\n  padding: 1.25rem 1.5rem 0.5rem 1.5rem;\r\n}\r\n\r\n.section-header {\r\n  margin-top: 0.5rem;\r\n}\r\n</style> "],"mappings":";mBAAA;;EAiBcA,KAAK,EAAC;AAAU;;EAGhBA,KAAK,EAAC;AAAU;;EApB9BC,GAAA;EAqBgCD,KAAK,EAAC;;;EASpBA,KAAK,EAAC;AAAe;;EA9BvCC,GAAA;EAqC4CD,KAAK,EAAC;;;;;uBApChDE,mBAAA,CA8CM;IA9CDF,KAAK,EADZG,eAAA,EACa,mBAAmB;MAAA,iBAA4BC,MAAA,CAAAC;IAAW;MACnEC,mBAAA,wBAA2B,EAC3BC,mBAAA,CA8BM;IA7BJP,KAAK,EAJXG,eAAA,EAIY,WAAW;kBACeC,MAAA,CAAAI,UAAU;wBAA6BC,MAAA,CAAAC,IAAI,CAACC;;OAMnEF,MAAA,CAAAC,IAAI,CAACC,SAAS,I,cADvBT,mBAAA,CAiBI;IA3BVD,GAAA;IAYSW,IAAI,EAAEH,MAAA,CAAAC,IAAI,CAACE,IAAI;IAChBZ,KAAK,EAbbG,eAAA,EAac,UAAU;MAAA,UACIM,MAAA,CAAAC,IAAI,CAACG;IAAM;IAC9BC,OAAK,EAAAC,MAAA,QAAAA,MAAA,MAfdC,cAAA,KAAAC,IAAA,KAewBb,MAAA,CAAAc,WAAA,IAAAd,MAAA,CAAAc,WAAA,IAAAD,IAAA,CAAW;MAE3BV,mBAAA,CAEO,QAFPY,UAEO,GADLC,YAAA,CAAuCC,eAAA;IAAhCC,IAAI,EAAElB,MAAA,CAAAmB,WAAW,CAACd,MAAA,CAAAC,IAAI,CAACc,IAAI;uCAEpCjB,mBAAA,CAA6C,QAA7CkB,UAA6C,EAAAC,gBAAA,CAAnBjB,MAAA,CAAAC,IAAI,CAACiB,IAAI,kBACvBlB,MAAA,CAAAC,IAAI,CAACkB,KAAK,I,cAAtB1B,mBAAA,CAAiE,QAAjE2B,UAAiE,EAAAH,gBAAA,CAApBjB,MAAA,CAAAC,IAAI,CAACkB,KAAK,oBArB/DtB,mBAAA,gBAuBQA,mBAAA,mCAAsC,EAC1BF,MAAA,CAAAC,WAAW,I,cAAvBH,mBAAA,CAEO;IA1BfD,GAAA;IAwBiCD,KAAK,EAxBtCG,eAAA,EAwBuC,cAAc;MAAA,YAAuBC,MAAA,CAAAI;IAAU;MAC5EY,YAAA,CAA6CC,eAAA;IAAvCC,IAAI,EAAC,qBAAqB;IAACQ,IAAI,EAAC;yBAzBhDxB,mBAAA,e,yBAAAyB,UAAA,M,cA8BM7B,mBAAA,CAEM8B,SAAA;IA