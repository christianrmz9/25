cument.removeEventListener('click', this.handleClickOutside);\n  }\n};","map":{"version":3,"names":["ThemeToggle","useThemeStore","name","components","data","searchQuery","isUserMenuOpen","themeStore","userName","computed","logoSrc","userInitial","charAt","methods","handleSearch","trim","console","log","toggleUserMenu","toggleSidebar","$emit","mounted","document","addEventListener","event","userProfile","$el","querySelector","contains","target","beforeUnmount","removeEventListener","handleClickOutside"],"sources":["C:\\Users\\Pc\\Desktop\\Proyectos\\criwave\\client\\src\\components\\layout\\AppHeader.vue"],"sourcesContent":["<template>\n  <header class=\"app-header\">\n    <div class=\"header-container\">\n      <div class=\"header-content\">\n        <!-- Primer grupo: Logo y título de sección -->\n        <div class=\"header-left\">\n          <!-- Botón de menú -->\n          <button class=\"menu-button\" @click=\"toggleSidebar\" aria-label=\"Abrir menú lateral\">\n            <img \n              :src=\"logoSrc\" \n              alt=\"Leadwave\" \n              class=\"logo-image\"\n            />\n          </button>\n          \n          <!-- Título de la sección actual -->\n          <h1 class=\"page-title\">Reportes</h1>\n        </div>\n        \n        <!-- Buscador -->\n        <div class=\"search-container\">\n          <input \n            type=\"text\" \n            class=\"search-input\" \n            placeholder=\"Buscar...\" \n            v-model=\"searchQuery\"\n            @keyup.enter=\"handleSearch\"\n          />\n        </div>\n        \n        <!-- Perfil de usuario y tema -->\n        <div class=\"user-actions\">\n          <!-- Botón de tema -->\n          <theme-toggle />\n          \n          <!-- Perfil de usuario -->\n          <div class=\"user-profile\" @click=\"toggleUserMenu\">\n            <div class=\"user-avatar\">\n              <span class=\"user-initial\">{{ userInitial }}</span>\n            </div>\n            <span class=\"user-name hide-on-mobile\">{{ userName }}</span>\n            \n            <!-- Menú desplegable del usuario (oculto por defecto) -->\n            <div class=\"user-menu\" v-if=\"isUserMenuOpen\">\n              <div class=\"menu-item\">\n                <span class=\"menu-icon user-icon\"></span>\n                <span>Perfil</span>\n              </div>\n              <div class=\"menu-item\">\n                <span class=\"menu-icon settings-icon\"></span>\n                <span>Configuración</span>\n              </div>\n              <div class=\"menu-divider\"></div>\n              <div class=\"menu-item\">\n                <span class=\"menu-icon logout-icon\"></span>\n                <span>Cerrar sesión</span>\n              </div>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </header>\n</template>\n\n<script>\n/**\n * Componente de header principal de la aplicación\n * \n * Incluye:\n * - Logo que activa el menú lateral\n * - Título de la sección actual\n * - Buscador\n * - Botón de cambio de tema\n * - Perfil de usuario\n * \n * @component AppHeader\n */\nimport ThemeToggle from '../ui/ThemeToggle.vue';\nimport { useThemeStore } from '../../store/theme';\n\nexport default {\n  name: 'AppHeader',\n  \n  components: {\n    ThemeToggle\n  },\n  \n  data() {\n    return {\n      searchQuery: '',\n      isUserMenuOpen: false,\n      themeStore: useThemeStore,\n      // Datos de usuario de prueba\n      userName: 'Christian R'\n    };\n  },\n  \n  computed: {\n    /**\n     * Determina la imagen del logo según el tema actual\n     */\n    logoSrc() {\n      return '/img/Wblanco.png';\n    },\n    \n    /**\n     * Obtiene la inicial del nombre de usuario para el avatar\n     */\n    userInitial() {\n      return this.userName.charAt(0);\n    }\n  },\n  \n  methods: {\n    /**\n     * Maneja la búsqueda cuando se presiona Enter\n     */\n    handleSearch() {\n      if (this.searchQuery.trim()) {\n        console.log('Buscando:', this.searchQuery);\n        // Aquí iría la lógica de búsqueda\n      }\n    },\n    \n    /**\n     * Alterna la visibilidad del menú de usuario\n     */\n    toggleUserMenu() {\n      this.isUserMenuOpen = !this.isUserMenuOpen;\n    },\n    \n    /**\n     * Alterna la visibilidad del menú lateral\n     */\n    toggleSidebar() {\n      // Emitir evento para que el componente padre pueda reaccionar\n      this.$emit('toggle-sidebar');\n    }\n  },\n  \n  // Cerrar el menú de usuario si se hace clic fuera de él\n  mounted() {\n    document.addEventListener('click', (event) => {\n      const userProfile = this.$el.querySelector('.user-profile');\n      if (userProfile && !userProfile.contains(event.target) && this.isUserMenuOpen) {\n        this.isUserMenuOpen = false;\n      }\n    });\n  },\n  \n  // Limpiar event listeners al destruir el componente\n  beforeUnmount() {\n    document.removeEventListener('click', this.handleClickOutside);\n  }\n};\n</script>\n\n<style scoped>\n/* Estilos del header */\n.app-header {\n  background-color: #121212; /* Fondo oscuro como en la imagen */\n  position: fixed;\n  top: 0;\n  left: 0;\n  right: 0;\n  height: 56px; /* Altura ajustada como en la imagen */\n  z-index: 1000;\n  color: #ffffff;\n}\n\n.header-container {\n  width: 100%;\n  padding: 0 16px;\n  height: 100%;\n}\n\n.header-content {\n  display: flex;\n  align-items: center;\n  justify-content: space-between;\n  height: 100%;\n}\n\n/* Grupo izquierdo: logo y título */\n.header-left {\n  display: flex;\n  align-items: center;\n}\n\n/* Botón de menú */\n.menu-button {\n  background: none;\n  border: none;\n  cursor: pointer;\n  display: flex;\n  align-items: center;\n  transition: transform 0.2s;\n  margin-right: 24px;\n  padding: 0;\n}\n\n.menu-button:hover {\n  transform: scale(1.05);\n}\n\n.menu-button:active {\n  transform: scale(0.95);\n}\n\n.logo-image {\n  height: 24px;\n  width: auto;\n}\n\n/* Título de la página */\n.page-title {\n  font-size: 1rem;\n  